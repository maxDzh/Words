<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6ab344"
    tools:context="com.mylab.mdzh.words.MainActivity">

    <Button
        android:id="@+id/add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        android:filterTouchesWhenObscured="true"
        android:layout_gravity="right"
        android:textSize="35dp"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="#fff"
        android:background="#6ab344"
        android:stateListAnimator="@null"
        android:onClick="AddWord"
        />

    <TextView
        android:id="@+id/MainWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:shadowColor="#111"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Main word" />

    <RadioButton
        android:id="@+id/radioV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColorLink="#111"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/radioV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#ddd"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/radioV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/radio_color"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/radioV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/radio_color"
        android:text="RadioButton" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Next"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:filterTouchesWhenObscured="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity = "bottom">

        <Button
            android:id="@+id/button_delete"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Delete"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:filterTouchesWhenObscured="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="#6ab344"/>

        <Button
            android:id="@+id/button_know"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Know it"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:filterTouchesWhenObscured="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="#6ab344"/>


    </RelativeLayout>



</LinearLayout>
